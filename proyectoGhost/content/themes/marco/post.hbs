{{!< default}}
{{#post}}
    <article>
        <header class="post__background-image" style="background-image: url({{feature_image}})">
            <div class="post__background-image-text">
                <h1 class="title has-text-white">{{title}}</h1>
                <time class="subtitle has text-text-white">
                    {{date format="DD MMMM YYYY"}}
                </time>
            </div>
        </header>
        <section class="container">
            <div class="content">
                {{content}}
            </div>
        </section>
    </article>


    <section class="container">
        <div class="post__author-card">
            {{#author}}
                {{> author}}
            {{/author}}
        </div>
    </section>

    <section class="container">
        <div id="disqus_thread"></div>
<script>
   
    var disqus_config = function () {
    this.page.url = PAGE_URL;  // Replace PAGE_URL with your page's canonical URL variable
    this.page.identifier = PAGE_IDENTIFIER; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
    };
   
    (function() { // DON'T EDIT BELOW THIS LINE
    var d = document, s = d.createElement('script');
    s.src = 'https://marco-dominguez.disqus.com/embed.js';
    s.setAttribute('data-timestamp', +new Date());
    (d.head || d.body).appendChild(s);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </section>

    {{#if @labs.suscribers}}
        <section class="section">
            <div class="container">
                {{suscribe-form}}
            </div>
        </section>
    {{/if}}
{{/post}}